<%= link_to article_path(article) do %>
    <div class="card">
      <div class="card_image">
        <%= image_tag 'eyecatch1.png' %>
      </div>
      <div class="card_content">
       <div class="card_title">
            <%= article.title %>
          </div>
        <div class="card_heart">
          <%= image_tag 'heart.svg' %>
        </div>
        <div class="card_detail">
          <%= image_tag 'Oval.png' %>
          <div>
            <p><%= article.display_created_at %></p>
          </div>
        </div>
      </div>
    <% end%>